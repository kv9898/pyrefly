{
    "name": "pyrefly",
    "displayName": "Pyrefly - Python Language Tooling",
    "description": "Python autocomplete, typechecking, code navigation and more! Powered by Pyrefly, an open-source language server",
    "icon": "images/pyrefly-symbol.png",
    "extensionKind": [
        "workspace"
    ],
    "author": "Facebook",
    "license": "Apache2",
    "version": "0.0.1",
    "repository": {
        "type": "git",
        "url": "https://github.com/facebook/pyrefly"
    },
    "publisher": "meta",
    "categories": [
        "Programming Languages",
        "Linters",
        "Other"
    ],
    "keywords": [
        "multi-root ready",
        "python",
        "type",
        "typecheck",
        "typehint",
        "completion",
        "lint"
    ],
    "engines": {
        "vscode": "^1.94.0"
    },
    "main": "./dist/extension",
    "activationEvents": [
        "onLanguage:python"
    ],
    "contributes": {
        "languages": [
            {
                "id": "python",
                "aliases": [
                    "Python"
                ],
                "extensions": [
                    ".py",
                    ".pyi"
                ]
            }
        ],
        "commands": [
            {
                "title": "Restart Pyrefly Client",
                "category": "pyrefly",
                "command": "pyrefly.restartClient"
            }
        ],
        "configuration": {
            "properties": {
                "pyrefly.lspPath": {
                    "type": "string",
                    "default": "",
                    "description": "The path to the binary used for the lsp"
                },
                "pyrefly.lspArguments": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "lsp"
                    ],
                    "description": "Additional arguments that should be passed to the binary at pyrefly.lspPath"
                },
                "python.pyrefly.disableLanguageServices": {
                    "type": "boolean",
                    "default": false,
                    "description": "If true, pyrefly will not provide other IDE services like completions, hover, definition, etc. To control type errors, see `python.pyrefly.displayTypeErrors`"
                },
                "python.pyrefly.disabledLanguageServices": {
                    "type": "object",
                    "default": {},
                    "description": "Selectively disable individual language services",
                    "properties": {
                        "definition": {
                            "type": "boolean",
                            "default": false,
                            "description": "Disable go-to-definition"
                        },
                        "typeDefinition": {
                            "type": "boolean",
                            "default": false,
                            "description": "Disable go-to-type-definition"
                        },
                        "codeAction": {
                            "type": "boolean",
                            "default": false,
                            "description": "Disable code actions (quick fixes)"
                        },
                        "completion": {
                            "type": "boolean",
                            "default": false,
                            "description": "Disable completion (autocomplete)"
                        },
                        "documentHighlight": {
                            "type": "boolean",
                            "default": false,
                            "description": "Disable document highlight"
                        },
                        "references": {
                            "type": "boolean",
                            "default": false,
                            "description": "Disable find references"
                        },
                        "rename": {
                            "type": "boolean",
                            "default": false,
                            "description": "Disable rename"
                        },
                        "signatureHelp": {
                            "type": "boolean",
                            "default": false,
                            "description": "Disable signature help (parameter hints)"
                        },
                        "hover": {
                            "type": "boolean",
                            "default": false,
                            "description": "Disable hover (tooltips)"
                        },
                        "inlayHint": {
                            "type": "boolean",
                            "default": false,
                            "description": "Disable inlay hints"
                        },
                        "documentSymbol": {
                            "type": "boolean",
                            "default": false,
                            "description": "Disable document symbols (outline)"
                        },
                        "workspaceSymbol": {
                            "type": "boolean",
                            "default": false,
                            "description": "Disable workspace symbols"
                        },
                        "semanticTokens": {
                            "type": "boolean",
                            "default": false,
                            "description": "Disable semantic tokens"
                        }
                    }
                },
                "python.pyrefly.displayTypeErrors": {
                    "type": "string",
                    "description": "If 'default', Pyrefly will only provide type check squiggles in the IDE if your file is covered by a Pyrefly configuration. If 'force-off', Pyrefly will never provide type check squiggles in the IDE. If 'force-on', Pyrefly will always provide type check squiggles in the IDE.",
                    "default": "default",
                    "enum": [
                        "default",
                        "force-on",
                        "force-off"
                    ]
                },
                "pyrefly.trace.server": {
                    "type": "string",
                    "description": "Set to 'verbose' to enable LSP trace in the console",
                    "default": "off",
                    "enum": [
                        "off",
                        "verbose"
                    ]
                }
            }
        }
    },
    "scripts": {
        "compile": "npm run check-types && node esbuild.js",
        "check-types": "tsc --noEmit",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "vscode:prepublish": "npm run package",
        "package": "npm run check-types && node esbuild.js --production",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "^16.11.7",
        "@types/vscode": "^1.78.1",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.5.2",
        "@vscode/vsce": "^2.9.2",
        "esbuild": "^0.25.1",
        "npm-run-all": "^4.1.5",
        "typescript": "^4.4.3"
    },
    "dependencies": {
        "@vscode/python-extension": "^1.0.5",
        "vsce": "^2.15.0",
        "vscode-languageclient": "9.0.1"
    },
    "extensionDependencies": [
        "ms-python.python"
    ]
}
